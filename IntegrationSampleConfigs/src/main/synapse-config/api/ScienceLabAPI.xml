<?xml version="1.0" encoding="UTF-8"?>
<api context="/userdata" name="ScienceLabAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <log description="Log Message" level="custom">
                <property name="Message" value="Service Triggered"/>
            </log>
            <enrich description="Enrich the XML payload">
                <source clone="true" type="inline">
                    <Job xmlns="">Developer</Job>
                </source>
                <target action="child" type="body"/>
            </enrich>
            <payloadFactory description="Build JSON payload from XML body" media-type="json">
                <format> {
    "status" : "successful",
    "name" : "$1",
    "age" : $2,
    "job_category" : "$3"
}
                </format>
                <args>
                    <arg evaluator="xml" expression="//UserDetails/Name"/>
                    <arg evaluator="xml" expression="//UserDetails/Age"/>
                    <arg evaluator="xml" expression="//UserDetails/Job"/>
                </args>
            </payloadFactory>
            <respond description="Respond"/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
