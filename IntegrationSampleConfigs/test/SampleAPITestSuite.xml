<unit-test>
    <artifacts>
        <test-artifact>
            <artifact>/IntegrationSampleConfigs/src/main/synapse-config/api/ScienceLabAPI.xml</artifact>
        </test-artifact>
        <supportive-artifacts/>
        <registry-resources/>
        <connector-resources/>
    </artifacts>
    <test-cases>
        <test-case name="sample_test">
            <input>
                <request-path>/</request-path>
                <request-method>POST</request-method>
                <payload><![CDATA[<UserDetails>
          <Name>John Steve</Name>
         <Age>34</Age>
</UserDetails>]]></payload>
                <properties>
                    <property name="Content-Type" scope="transport" value="application/xml"/>
                </properties>
            </input>
            <assertions>
                <assertEquals>
                    <actual>$body</actual>
                    <expected><![CDATA[{
    "status" : "successful",
    "name" : "John Steve",
    "age" : 34,
    "job_category" : "Developer"
}]]></expected>
                    <message>Error, response does not match with expected</message>
                </assertEquals>
            </assertions>
        </test-case>
    </test-cases>
    <mock-services/>
</unit-test>
